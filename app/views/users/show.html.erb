<div class="main">
  <div class="container">
    <div class="user-header">
    <p>マイページ</p>
    </div>
    <div class="users-form">
      <div class="form-body">
        <table class="inline_block">
          <tr>
            <th>名前</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr> 
        </table> 
        <a class="inline_block top-light">編集</a>
      </div>
    </div>
    </div>
    <div class="user-header">
    <p>個人投稿</p>
    </div>
    <% @posts.each do |post| %>
      <div class="user-posts-index-item">
        <div class="post-user-name">
          <strong><%= post.user.name %></strong>
        </div>
        <div class="post-body">
          <p><%= post.content %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>