
<div class="main posts-index">
  <div class="container">
    <div class="post-header">
     <p>投稿一覧</p>
    </div>
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-user-name">
          <strong><%= post.user.name %></strong>
        </div>
        <div class="post-body">
          <p><%= post.content %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>